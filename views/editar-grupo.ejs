<main class="contenedo contenedor-formularios no-padding">
    <h1><%= nombrePagina %> </h1>

    <form class="default-form" method="post">
        <div class="campo">
            <label for="">Nombre</label>
            <input type="text" name="nombre" value="<%= grupo.nombre%> " placeholder="Nombre grupo">
        </div>

        <div class="campo descripcion">
            <label for="">descripción</label>
            <div class="contenedor editor">
                <input type="hidden" name="descripcion" value="<%= grupo.descripcion %> " id="x">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label for="">Categoría</label>
            <select name="categoria">
                <option value="" selected disabled>-- Elige una categoria --</option>  
                <%categorias.forEach (categoria => { %>
                    <option 
                        value="<%= categoria.id %>"
                        <%= (grupo.categoriaId == categoria.id) ? 'selected' : ''%> 
                    >
                        <%= categoria.nombre %> 
                    </option>
                    
                <% }) %> 
            </select>
        </div>
        <div class="campo">
            <label for="">Sitio web</label>
            <input type="url" value="<%= grupo.url %> " name="url" placeholder="Sitio web">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Guardar cambios" class="btn btn-rosa">
        </div>
    </form>
</main>