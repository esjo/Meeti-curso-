<main class="contenedor panel-administracion">
    <h1> <%= nombrePagina %>  </h1>

    <div class="contenedor-botones">
        <a href="/nuevo-grupo" class="btn btn-amarillo">Nuevo Grupo</a>
        <a href="/nuevo-meeti" class="btn btn-azul">Nuevo Meeti</a>
        <a href="/editar-perfil" class="btn btn-rosa">Editar perfil</a>
        <a href="/cambiar-password" class="btn btn-verde">Cambiar password</a>
        <a href="/imagen-perfil" class="btn btn-amarillo">Imagen pefil</a>
    </div>

    <div class="seccion-admin">
        <h2>Proximos meeti's</h2>
        <% if(meeti.length){ %> 
            <% meeti.forEach((meetis) =>{ %> 
                <ul>
                    <li>
                        <div class="informacion-admin">
                            <% moment.locale('es') %> 
                            <% const fecha = meetis.fecha +' '+meetis.hora %> 
                            <p class="fecha"><%=moment(fecha).format('LLLL')%> horas</p>
                            <a href="/meeti/<%= meetis.slug %> " target="_blank">
                                <h3><%= meetis.titulo %> </h3>
                            </a>
                           
                            <small>interesados:<%= meetis.interesados.length %> </small>
                        </div>
                        <div class="acciones contenedor-botones">
                            <a href="/editar-meeti/<%= meetis.id %>" class="btn btn-verde">Editar</a>
                            <a href="/asistentes-meeti/<%= meetis.id %>" class="btn btn-azul2">asistentes</a>
                            <a href="/eliminar-meeti/<%= meetis.id %>" class="btn btn-rojo">Eliminar</a>
                        </div>
                    </li>
            <% }) %> 
                </ul>
           
        <% }else{ %> 
            <p>Aun no tienes meeti's creados</p>
        <% } %> 
    </div>

    <div class="seccion-admin">
        <% if(grupos.length){ %> 
            <h2>Tus Meeti's</h2>
            <ul>
                <% grupos.forEach(grupo => { %> 
                    <li>
                        <div class="informacion-admin">
                            <h3><%= grupo.nombre %> </h3>
                        </div>
                        <div class="acciones contenedor-botones">
                            <a href="/editar-grupo/<%= grupo.id %>" class="btn btn-verde">Editar</a>
                            <a href="/imagen-grupo/<%= grupo.id %> " class="btn btn-azul2">Imagen</a>
                            <a href="/eliminar-grupo/<%= grupo.id %> " class="btn btn-rojo">Eliminar</a>
                        </div>
                    </li>
                <% }) %>
            </ul>
        <% }else{ %> 
            <p>No tienes un grupo creado</p>
        <% } %>    
    </div>

    <div class="seccion-admin">
        <h2>meeti's anteriores</h2>
        <% if(anteriores.length){ %> 
            <% anteriores.forEach((meetis) =>{ %> 
                <ul>
                    <li>
                        <div class="informacion-admin">
                            <% moment.locale('es') %> 
                            <% const fecha = meetis.fecha +' '+meetis.hora %> 
                            <p class="fecha"><%=moment(fecha).format('LLLL')%> horas</p>
                            <h3><%= meetis.titulo %> </h3>
                            <small>interesados:<%= meetis.interesados.length %> </small>
                        </div>
                        <div class="acciones contenedor-botones">
                            <a href="/editar-meeti/<%= meetis.id %>" class="btn btn-verde">Editar</a>
                            <a href="/asistentes-meeti/<%= meetis.id %>" class="btn btn-azul2">asistentes</a>
                            <a href="/eliminar-meeti/<%= meetis.id %>" class="btn btn-rojo">Eliminar</a>
                        </div>
                    </li>
            <% }) %> 
                </ul>
           
        <% }else{ %> 
            <p>Aun no hay meeti's anteriores</p>
        <% } %> 
    </div>
</main>