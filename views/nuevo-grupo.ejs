<main class="contenedo contenedor-formularios no-padding">
    <h1><%= nombrePagina %> </h1>

    <form action="/nuevo-grupo" class="default-form" enctype="multipart/form-data" method="post">
        <div class="campo">
            <label for="">Nombre</label>
            <input type="text" name="nombre" placeholder="Nombre grupo">
        </div>

        <div class="campo descripcion">
            <label for="">descripción</label>
            <div class="contenedor editor">
                <input type="hidden" name="descripcion" id="x">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label for="">Categoría</label>
            <select name="categoria">
                <option value="" selected disabled>-- Elige una categoria --</option>  
                <%categorias.forEach (categoria => { %>
                    <option value="<%= categoria.id %>"><%= categoria.nombre %> </option>
                <% }) %> 
            </select>
        </div>
        <div class="campo">
            <label for="">Imagen</label>
            <input type="file" name="imagen" placeholder="Inserta una imagen">
        </div>
        <div class="campo">
            <label for="">Sitio web</label>
            <input type="url" name="url" placeholder="Sitio web">
        </div>
        
            <input type="submit" value="Crear grupo" class="btn btn-rosa">
    </form>
</main>