<main class="contenedor contenedor-formularios">
    <h1><%= nombrePagina %> </h1>

    <form class="default-form" enctype="multipart/form-data" method="post">
        <legend>Sube tu imagen junto a tu nombre y tu biograf√≠a</legend>
        <div class="campo">
            <label for="">Imagen</label>
            <input type="file" name="imagen" placeholder="Inserta una imagen">
        </div>
        <% if(usuario.imagen){ %> 
            <div class="campo">
                <label for="">Imagen actual</label>
                <img src="/uploads/perfiles/<%=usuario.imagen%>" width="400" alt="">
            </div>
        <% }else{ %>
            <p>No hay imagen actual</p>
        <% } %> 
        
        <div class="campo enviar">
            <input type="submit" value="Subir imagen" class="btn btn-rosa">
        </div>
    </form>
</main>